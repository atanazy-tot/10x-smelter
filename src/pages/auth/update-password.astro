---
import Layout from "../../layouts/Layout.astro";
import { UpdatePasswordIsland } from "../../components/auth/UpdatePasswordIsland";
export const prerender = false;

// This page requires authentication (user must have valid session from reset link)
const { isAuthenticated } = Astro.locals;
if (!isAuthenticated) {
  return Astro.redirect("/auth?next=/auth/update-password");
}
---

<Layout title="SMELT - Update Password">
  <UpdatePasswordIsland client:load />
</Layout>
